<article class="py-8">
   {% for block in section.blocks %}

    {%  case block.type %} 
      {%  when 'article_title' %}
       <div class="flex justify-center items-center">
        <div class="max-w-7xl text-center">
            <a class="text-base uppercase text-gray-500 hover:text-gray-800 font-bold" href="{{ blog.url }}">{{ blog.title }}</a>
             <h1 class="font-medium text-5xl ">{{ article.title }}</h1>
        </div>
       </div>
       
      {%  when 'article_author' %}
        <div class="flex items-center justify-center">
            <div class="max-w-7xl text-center">
                {% if section.settings.enable_author %}
                    <h2 class="font-bold text-2xl">{{ article.author }}</h2>
                {% endif %}
            </div>
        </div>
        
       {%  when 'article_published_date' %}      
        <div class="flex items-center justify-center">
            <div class="max-w-7xl text-center">
                 {% if section.settings.enable_published_date %}
                    <time class="font-bold text-2xl" datetime="{{ article.published_at | date:'%y-%m-%d' }}">
                    {% comment %} {{ article.published_at | date:'%y-%m-%d' }} {% endcomment %}
                    {{ article.published_at | date: format:'on_date' }}
                    </time>
           {% endif %}
            </div>
        </div>
      
       {%  when 'featured_image' %}
        {% comment %} <div class="mx-w-7xl rounded-lg bg-blue-100 mx-auto overflow-hidden ">
             <img src="{{ article.image |  image_url: width: 200  }}" alt="{{ article.image.alt }}">
        </div>  {% endcomment %}
        <div class="mx-w-7xl rounded-lg bg-blue-100 mx-auto overflow-hidden flex justify-center items-center my-4 ">
            {% if article.image != blank %}
                <img class="w-full h-96 object-cover object-center" src="{{ article.image | image_url: width: 200 }}" alt="{{ article.image.alt }}">
            {%  else %}
                {% assign placeholder_image='lifestyle-2' %}
                {{ placeholder_image |  placeholder_svg_tag: 'w-full h-96 object-cover object-center p-5' }}


            {% endif %}
        </div>
        

          

       {%  when 'article_content' %}
         <div class="p-5 bg-orange-300">{{ article.content }}</div>
    {% endcase %} 
{% endfor %}
 
</article>


{% if blog.comments_enabled? %}
    <h1>first comment</h1>
    {% else %}
    <h2>flase commnet</h2>
{% endif %}





  
   


   


